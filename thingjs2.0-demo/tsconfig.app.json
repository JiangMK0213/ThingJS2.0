{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "composite": true,
    "baseUrl": "./",
    "target": "esnext",
    "useDefineForClassFields": true,
    "isolatedModules": false,
    "strict": false,
    "module": "esnext",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "env.d.ts",
    "mock/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/*.ts",
    "src/*.d.ts",
    "src/package/thingjs-type/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dev",
    "thingjs.d.ts",
    "cmap.d.ts",
    "src/package/screen-size-adaptor/postcss-plugin"
  ]
}
